{
  "name": "super-vote-secret",
  "version": "2.0.0",
  "description": "SUPER moteur de vote secret - Application moderne de vote anonyme pour assemblÃ©es",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python -m uvicorn server:app --host 0.0.0.0 --port 8001 --reload",
    "dev:frontend": "cd frontend && yarn start",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && yarn build",
    "start": "npm run docker:up",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && yarn install",
    "deploy": "./deploy.sh",
    "check": "./check.sh",
    "setup": "./dev-setup.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/vote-secret.git"
  },
  "keywords": [
    "super-vote-secret", 
    "voting",
    "assembly",
    "secret-vote",
    "uvicorn",
    "fastapi",
    "react",
    "mongodb",
    "anonymous",
    "pdf-report"
  ],
  "author": "SimonSB",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "python": ">=3.11.0"
  }
}