# SUPER Vote Secret - Production Environment Template
# Copy to .env and customize for your deployment

# Domain Configuration
DOMAIN=vote.example.com
ADMIN_EMAIL=admin@example.com

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-secure-password-here
MONGO_DB=vote_secret

# Security Configuration (Generate your own!)
# Use: openssl rand -base64 64 | tr -d '\n'
JWT_SECRET=your-jwt-secret-here

# Use: openssl rand -hex 32  
ENCRYPTION_KEY=your-encryption-key-here

# Application Settings
APP_NAME=SUPER Vote Secret
APP_VERSION=3.0.0
NODE_ENV=production
PYTHON_ENV=production

# SSL Configuration
SSL_ENABLED=true

# Performance Settings
COMPOSE_PARALLEL_LIMIT=8
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Deployment Metadata (auto-populated)
DEPLOY_DATE=
DEPLOY_USER=
DEPLOY_HOST=