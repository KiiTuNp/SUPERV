# SUPER Vote Secret - Configuration VPS Template
# Copier vers .env et personnaliser

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
MONGO_DB=vote_secret

# Application Configuration  
DOMAIN=vote.example.com
ADMIN_EMAIL=admin@example.com

# Security Keys (CRITICAL: Générez des clés uniques !)
JWT_SECRET=CHANGE_THIS_32_CHARACTER_SECRET_KEY
ENCRYPTION_KEY=CHANGE_THIS_32_CHARACTER_ENCRYPTION

# Application Settings
APP_NAME=SUPER Vote Secret
APP_VERSION=2.2.0
NODE_ENV=production
PYTHON_ENV=production

# SSL Configuration
SSL_ENABLED=true
SSL_EMAIL=admin@example.com

# Backup Configuration
BACKUP_RETENTION_DAYS=30
ENABLE_AUTOMATED_BACKUPS=true